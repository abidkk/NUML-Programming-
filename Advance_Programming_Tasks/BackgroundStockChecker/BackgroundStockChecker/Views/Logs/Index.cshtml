@{
    ViewData["Title"] = "Application Logs";
}

<h2>Application Logs</h2>

@if (ViewBag.Logs == null)
{
    <p class="alert alert-danger">Error loading log file.</p>
}
else
{
    <pre style="
            background:#1e1e1e;
            color:#00ff00;
            padding:15px;
            border-radius:5px;
            font-family:'Consolas', monospace;
            white-space:pre-wrap;
            overflow-x:auto;
            max-height:600px;">
    @ViewBag.Logs
        </pre>
}
